  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc && cp -r src/data dist/ 2>/dev/null || true",
    "build:frontend": "cd ../frontend && npm run build",
    "build:all": "npm run build:frontend && npm run build",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production npm run start",
    "serve": "npm run build:all && npm run start:prod",
    "serve:tunnel": "npm run build:all && concurrently \"npm run start:prod\" \"cloudflared tunnel run recipe-reaper\"",
    "dev:local": "npm run build:frontend && npm run dev",
    "tunnel": "cloudflared tunnel run recipe-reaper",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "init-postgres": "npx ts-node init-postgres-tables.ts"
