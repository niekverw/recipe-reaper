# OpenAI Configuration (Optional - for AI recipe parsing)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration (Required - for AI recipe parsing and image processing)
GEMINI_API_KEY=your_gemini_api_key_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=recipeapp
DB_USER=
DB_PASSWORD=

# Server Configuration
PORT=3001
NODE_ENV=development

# Generate a session secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your-secure-random-session-secret-here

# Frontend URL(s) for CORS - can be comma-separated for multiple origins
FRONTEND_URL=http://localhost:5173

# VITE Configuration for frontend
VITE_API_BASE_URL=http://localhost:3001/api
VITE_RECIPES_PER_PAGE=20

# Performance Monitoring Configuration
# Set to 'false' to disable performance monitoring entirely
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Google Analytics 4 Configuration
# Get your Measurement ID from Google Analytics
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# API Access Control
ALLOW_PUBLIC_API=false

# Optional: Set FORCE_HTTPS=true when you have SSL
# FORCE_HTTPS=false

# Optional: Database path (defaults to ./data/recipes.db)
# DATABASE_PATH=./data/recipes.db

# Optional: Upload directory for images (defaults to ./data/uploads)
# UPLOAD_DIR=./data/uploads

# Optional: Session database path (defaults to ./data/sessions.db)
# SESSION_DB_PATH=./data/sessions.db

# Optional: Maximum file upload size in bytes (defaults to 10MB)
# MAX_FILE_SIZE=10485760

# Rate limiting configuration (defaults shown)
# API_RATE_LIMIT_WINDOW_MS=900000       # milliseconds (15 minutes)
# API_RATE_LIMIT_MAX_REQUESTS=10000     # requests per window per signed-in user
# NOT_FOUND_RATE_LIMIT_WINDOW_MS=900000 # milliseconds (15 minutes)
# NOT_FOUND_RATE_LIMIT_MAX=50           # invalid path requests per window